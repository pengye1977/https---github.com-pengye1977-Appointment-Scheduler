@model SBAS_Web.Models.PaymentModel

@{
    ViewBag.Title = "SearchPaymentsForClient";
    Layout = "~/Views/Shared/_ClientLoggedInLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1>Payments</h1>
    </div>
</div>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-table"></i> Search Payments </h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">

            @using (Html.BeginForm("SearchPaymentsForClient", "Client"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <h4>Please enter either the invoice number or date you wish to search:</h4><br />

                    <div class="form-group">
                        @Html.LabelFor(model => model.InvoiceNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.InvoiceNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.InvoiceNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PaymentDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.PaymentDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PaymentDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <br />
                            <input type="submit" value="Search" class="btn btn-default btn-primary" />
                            <button id="btnCancel" class="btn btn-default" onclick="Cancel();">Cancel</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Payments", "Payments")
</div>

<script>

    function Cancel() {
        location.href = 'Payments';
    }

</script>





