@model List<SBAS_Web.Models.InvoiceModel>

@{
    ViewBag.Title = "DisplayInvoicesForClient";
    Layout = "~/Views/Shared/_ClientLoggedInLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1>Invoicing</h1>
        <nav role="navigation" class="navbar navbar-inverse">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div id="navbarCollapse" class="collapse navbar-collapse">
                    <div class="nav navbar-nav">
                        <button id="btnViewAllInvoices" class="btn btn-primary" style="margin-top: 7px;" onclick="viewAllInvoices();">View All Invoices</button>
                        <button id="btnSearchInvoices" class="btn btn-primary" style="margin-top: 7px;" onclick="searchInvoices();">Search Invoices</button>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-table"></i> Selected Invoices </h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">

            @if (Model.Count == 0)
            {
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    You have no invoices to display.
                </div>
            }

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped tablesorter">
                        <thead>
                            <tr>
                                <th>Invoice # <i class="fa fa-sort"></i></th>
                                <th>Due Date <i class="fa fa-sort"></i></th>
                                <th>Amount (USD) <i class="fa fa-sort"></i></th>
                                <th>Paid <i class="fa fa-sort"></i></th>
                                <th>Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => invoice.InvoiceNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => invoice.DueDate)</td>
                                    <td>@Html.DisplayFor(modelItem => invoice.AmountDue)</td>
                                    <td>@Html.DisplayFor(modelItem => invoice.IsPaid)</td>
                                    <td>
                                        @Html.ActionLink("View Details", "ViewInvoice", new { invoiceID = invoice.InvoiceID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Invoicing", "Invoicing")
</div>


<script>

    function Cancel()
    {
        location.href = 'Invoicing';
    }

    function viewAllInvoices()
    {
        location.href = 'Invoicing';
    }

    function searchInvoices()
    {
        location.href = 'FindInvoiceForClient';
    }

    function viewInvoice()
    {
        location.href = 'ViewInvoice';
    }

</script>



