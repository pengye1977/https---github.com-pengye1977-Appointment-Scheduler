@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SBAS</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendocss")
    @Styles.Render("~/Content/reveal-css")
    @Styles.Render("~/Content/SBASCSS")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jsconfirm")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/kendojs")
    @Scripts.Render("~/bundles/jq-ContextMenu")
    @Scripts.Render("~/bundles/SBASJs")
    @RenderSection("scripts", required: false)
    <!-- Custom CSS -->
    <link href="/Content/landing-page.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
</head>
<body style="background-color:rgb(225,225,235);">
    <!-- Navigation -->
    <nav class=" navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("SBAS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                @if (Request.IsAuthenticated)
                {
                    if (SBAS_DAL.SBASUser.GetUserRoleName(User.Identity.GetUserId()) == "Customer")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Customer")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Client")</li>
                    }
                }
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
    </nav>

    @RenderBody()

    <!-- Footer -->
    <footer class="navbar navbar-default navbar-fixed-bottom" style="height: 84px;" role="navigation">
        <div class="container">
            <div class="row">
                <div class="col-lg-12" style="text-align: center;">
                    <ul class="list-inline">
                        <li>
                            @Html.ActionLink("SBAS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>

                        @if (Request.IsAuthenticated)
                        {
                            if (SBAS_DAL.SBASUser.GetUserRoleName(User.Identity.GetUserId()) == "Customer")
                            {

                                <li>@Html.ActionLink("Home", "Index", "Customer")</li>
                                <li class="footer-menu-divider">&sdot;</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Home", "Index", "Client")</li>
                                <li class="footer-menu-divider">&sdot;</li>
                            }
                        }

                        <li>
                            @Html.ActionLink("About", "About", "Home")
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            @Html.ActionLink("Contact", "Contact", "Home")
                        </li>
                    </ul>
                    <div style="clear: both;"></div>
                    <p style="text-align: center;">&copy; @DateTime.Now.Year - Small Business Appointment Scheduling System</p>
                </div>
            </div>
        </div>
    </footer>
</body>

</html>
