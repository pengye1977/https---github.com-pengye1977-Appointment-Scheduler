@using SBAS_Web.Models;
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<br/>
<div class="row">
    <div class="col-lg-12 text-center">
        <h2 class="section-heading" style="color:#FFFFFF;">Small Business Appointment Scheduler</h2>
    </div>
</div>
<div class="container" style="margin-top:30px">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>SBAS Login</strong></h3></div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                        <label for="Email">Username or Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "border-radius:0px", @id = "Email1", @placeholder = "Enter email", @type = "email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                        <label for="Password">Password </label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "border-radius:0px", @id = "Password", @placeholder = "Enter Password", @type = "password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @style = "border-radius:0px" })
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                            <p>
                                @Html.ActionLink("Register as a new user", "Register")
                            </p>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary">Login</button>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('body').addClass('aboutbody');
    });
</script>