@model List<SBAS_Web.Models.PaymentModel>

@{
    ViewBag.Title = "DisplayPaymentsForClient";
    Layout = "~/Views/Shared/_ClientLoggedInLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1>Payments</h1>
        <nav role="navigation" class="navbar navbar-inverse">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div id="navbarCollapse" class="collapse navbar-collapse">
                    <div class="nav navbar-nav">
                        <button id="btnSearchInvoices" class="btn btn-primary" style="margin-top: 7px;" onclick="searchPayments();">Search Payments</button>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-table"></i> Selected Payments </h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">

            @if (Model.Count == 0)
            {
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    You have no payments to display.
                </div>
            }

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped tablesorter">
                        <thead>
                            <tr>
                                <th>Invoice # <i class="fa fa-sort"></i></th>
                                <th>Date Paid <i class="fa fa-sort"></i></th>
                                <th>Amount Paid (USD) <i class="fa fa-sort"></i></th>
                                <th>Payment Method <i class="fa fa-sort"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => payment.InvoiceNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => payment.PaymentDate)</td>
                                    <td>@Html.DisplayFor(modelItem => payment.PaymentAmount)</td>
                                    <td>@Html.DisplayFor(modelItem => payment.PaymentMethod)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Payments", "Payments")
</div>


<script>

    function Cancel()
    {
        location.href = 'Payments';
    }

    function searchPayments()
    {
        location.href = 'FindPaymentForClient';
    }

</script>



